<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Main Test Automation File Appender -->
    <appender name="MAIN_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>target/logs/test-automation.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>target/logs/test-automation.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- DevTools Network Monitoring File Appender -->
    <appender name="DEVTOOLS_NETWORK_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>target/logs/devtools-network.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>target/logs/devtools-network.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- DevTools Console Logging File Appender -->
    <appender name="DEVTOOLS_CONSOLE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>target/logs/devtools-console.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>target/logs/devtools-console.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- DevTools Performance File Appender -->
    <appender name="DEVTOOLS_PERFORMANCE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>target/logs/devtools-performance.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>target/logs/devtools-performance.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- DevTools Network Logger - Ayr覺 dosyaya -->
    <logger name="proje.com.saucedemo.utils.NetworkTracer" level="DEBUG" additivity="false">
        <appender-ref ref="DEVTOOLS_NETWORK_FILE" />
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <!-- DevTools Helper Network Logger - Network bilgileri ayr覺 dosyaya -->
    <logger name="proje.com.saucedemo.utils.DevToolsHelper.Network" level="INFO" additivity="false">
        <appender-ref ref="DEVTOOLS_NETWORK_FILE" />
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <!-- DevTools Helper Console Logger - Console bilgileri ayr覺 dosyaya -->
    <logger name="proje.com.saucedemo.utils.DevToolsHelper.Console" level="INFO" additivity="false">
        <appender-ref ref="DEVTOOLS_CONSOLE_FILE" />
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <!-- DevTools Helper Performance Logger - Performance bilgileri ayr覺 dosyaya -->
    <logger name="proje.com.saucedemo.utils.DevToolsHelper.Performance" level="INFO" additivity="false">
        <appender-ref ref="DEVTOOLS_PERFORMANCE_FILE" />
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <!-- DevTools Helper Ana Logger - Genel bilgiler ana dosyaya -->
    <logger name="proje.com.saucedemo.utils.DevToolsHelper" level="INFO" additivity="false">
        <appender-ref ref="MAIN_FILE" />
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <!-- WebDriver Config Logger - Ana dosyaya -->
    <logger name="proje.com.saucedemo.config.WebDriverConfig" level="INFO" additivity="false">
        <appender-ref ref="MAIN_FILE" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- Test Logger - Ana dosyaya -->
    <logger name="proje.com.saucedemo" level="INFO" additivity="false">
        <appender-ref ref="MAIN_FILE" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- Root Logger - Ana dosyaya -->
    <root level="INFO">
        <appender-ref ref="MAIN_FILE" />
        <appender-ref ref="CONSOLE" />
    </root>
</configuration> 